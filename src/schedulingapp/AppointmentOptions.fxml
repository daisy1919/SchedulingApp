<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="200.0" prefWidth="200.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="schedulingapp.AppointmentOptionsController">
    <children>
      <Label layoutX="30.0" layoutY="15.0" prefHeight="20.0" prefWidth="140.0" text="Select an option below.">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Button fx:id="addAppointmentButton" layoutX="30.0" layoutY="50.0" mnemonicParsing="false" onAction="#handleAddAppointmentButton" prefHeight="30.0" prefWidth="140.0" text="Add Appointment" />
      <Button fx:id="editAppointmentButton" layoutX="30.0" layoutY="95.0" mnemonicParsing="false" onAction="#handleEditAppointmentButton" prefHeight="30.0" prefWidth="140.0" text="Edit Appointment" />
      <Button fx:id="deleteAppointmentButton" layoutX="30.0" layoutY="140.0" mnemonicParsing="false" onAction="#handleDeleteAppointmentButton" prefHeight="30.0" prefWidth="140.0" text="Delete Appointment" />
   </children>
</AnchorPane>
