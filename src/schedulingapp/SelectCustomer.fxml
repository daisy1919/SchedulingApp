<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="720.0" prefWidth="445.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="schedulingapp.SelectCustomerController">
    <children>
    <Label layoutX="50.0" layoutY="21.0" text="Search for a customer by name or choose from all customers.">
      <font>
         <Font name="System Bold" size="12.0" />
      </font>
    </Label>
    <TextField fx:id="searchCustomerText" layoutX="90.0" layoutY="50.0" prefHeight="25.0" prefWidth="210.0" />
      <Button fx:id="searchCustomerButton" layoutX="315.0" layoutY="50.0" mnemonicParsing="false" onAction="#handleSearchCustomerButton" text="Search" />
      <TableView fx:id="customersFound" layoutX="30.0" layoutY="100.0" prefHeight="240.0" prefWidth="380.0">
        <columns>
          <TableColumn fx:id="custNameCol" maxWidth="125.0" prefWidth="125.0" resizable="false" text="Name" />
          <TableColumn fx:id="custPhoneCol" maxWidth="105.0" prefWidth="105.0" resizable="false" text="Phone" />
          <TableColumn fx:id="custAddCol" maxWidth="135.0" prefWidth="135.0" resizable="false" text="Address" />
        </columns>
      </TableView>
   <Label layoutX="20.0" layoutY="360.0" text="Appointment times are between 8am and 5pm in 20 minute increments.">
    <font>
        <Font name="System Bold" size="12.0" />
    </font>
   </Label>
    <Label layoutX="25.0" layoutY="379.0" text="First, select a date below. Then, choose an available time on that day.">
    <font>
        <Font name="System Bold" size="12.0" />
    </font>
    </Label>
      <DatePicker fx:id="desiredApptDate" layoutX="135.0" layoutY="409.0" onAction="#handleDatePicker" />
      <TableView fx:id="availableAppts" layoutX="30.0" layoutY="454.0" prefHeight="200.0" prefWidth="380.0">
        <columns>
          <TableColumn fx:id="startTimeCol" editable="false" maxWidth="185.0" minWidth="185.0" prefWidth="185.0" resizable="false" text="Start Time" />
          <TableColumn fx:id="endTimeCol" editable="false" maxWidth="185.0" minWidth="185.0" prefWidth="185.0" resizable="false" text="End Time" />
        </columns>
      </TableView>
   <Button fx:id="useCustomer" layoutX="180.0" layoutY="673.0" mnemonicParsing="false" onAction="#handleUseCustomerButton" text="Make appointment for this customer" />
   <Button fx:id="goBackButton" layoutX="50.0" layoutY="673.0" mnemonicParsing="false" onAction="#handleGoBackButton" text="Go Back" />
      <Label fx:id="errorLabel" layoutX="20.0" layoutY="704.0" prefWidth="400.0" textAlignment="CENTER" textFill="RED" />
   </children>
</AnchorPane>
